<odoo>
    <data>
        <record id="gic_pos_payment_view_form_inherit" model="ir.ui.view">
            <field name="name">pos.payment.form.inherit</field>
            <field name="model">pos.payment</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                    <field name="create_uid"/>
                    <field name="partner_id"/>
                    <field name="coupon_number"/>
                    <field name="payment_method_id"/>
                    <field name="payment_plan"/>
                    <field name="applied_deductions"/>
                    <field name="pricelist"/>
                    <field name="amount_to_collect"/>
                </xpath>
            </field>
        </record>

        <record id="gic_pos_payment_view_tree_inherit" model="ir.ui.view">
            <field name="name">gic.pos.payment.tree.inherited</field>
            <field name="model">pos.payment</field>
            <field name="arch" type="xml">
                <tree create="false">
                    <field name="create_date"/>
                    <field name="state"/>
                    <field name="gic_pos_id"/>
                    <field name="create_uid"/>
                    <field name="partner_id"/>
                    <field name="payment_plan"/>
                    <field name="amount" sum="Total"/>
                    <field name="submission_date" widget="date"/>
                    <field name="settlement_date" widget="date"/>
                    <field name="amount_to_collect" sum="Total"/>
                </tree>
            </field>
        </record>

        <record id="view_gic_pos_payment_kanban" model="ir.ui.view">
            <field name="name">gic.pos.payment.kanban</field>
            <field name="model">pos.payment</field>
            <field name="arch" type="xml">
                <kanban>
                    <template>
                        <div class="o_kanban_card">
                            <div class="o_kanban_details">
                                <strong t-field="record.name.value"/>
                                <div>
                                    <field name="state"/>
                                    <field name="settlement_date"/>
                                    <field name="amount_to_collect"/>
                                </div>
                            </div>
                        </div>
                    </template>
                </kanban>
            </field>
        </record>

        <record id="view_gic_pos_payment_graph" model="ir.ui.view">
            <field name="name">gic.pos.payment.graph</field>
            <field name="model">pos.payment</field>
            <field name="arch" type="xml">
                <graph string="Vista GrÃ¡fico" type="bar">
                    <field name="create_date" interval="day"/>
                    <field name="state"/>
                    <field name="gic_pos_id"/>
                    <field name="settlement_date"/>
                    <field name="amount_to_collect" type="measure"/>
                </graph>
            </field>
        </record>

        <record id="view_gic_pos_payment_calendar" model="ir.ui.view">
            <field name="name">gic.pos.payment.calendar</field>
            <field name="model">pos.payment</field>
            <field name="arch" type="xml">
                <calendar string="Vista Calendario" date_start="settlement_date">
                    <field name="amount_to_collect" type="sum"/>
                    <field name="state"/>
                </calendar>
            </field>
        </record>

        <record id="gic_pos_payment_action" model="ir.actions.act_window">
            <field name="name">Listado de Cobros</field>
            <field name="res_model">pos.payment</field>
            <field name="view_mode">tree,form,kanban,calendar,graph</field>
            <field name="view_ids" eval="[(5, 0, 0),
                                   (0, 0, {'view_mode': 'tree', 'view_id': ref('gic_pos_payment_view_tree_inherit')}),
                                   (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_gic_pos_payment_kanban')}),
                                   (0, 0, {'view_mode': 'graph', 'view_id': ref('view_gic_pos_payment_graph')}),
                                   (0, 0, {'view_mode': 'calendar', 'view_id': ref('view_gic_pos_payment_calendar')})]"/>
            <field name="domain">[('gic_pos_id', '!=', False)]</field> <!-- Este es el dominio predeterminado -->
        </record>
    </data>
</odoo>
