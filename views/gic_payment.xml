<odoo>
	<data>

		<record id="gic_payment_view_tree" model="ir.ui.view">
		    <field name="name">Listado de Cobros</field>
		    <field name="model">gic.payment</field>
		    <field name="arch" type="xml">
				<tree string="Lista">
					<field name="order_date" string="Fecha"/>
					<field name="order_id" string="Nro de Pedido"/>
					<field name="pos_id" string="Sesión de POS"/>
					<field name="payment_method_id" string="Forma de Pago"/>
					<field name="payment_plan_id" string="Plan de Pago"/>
					<field name="order_amount" string="Monto de la Orden"/>
					<field name="cliente_id" string="Cliente"/>
					<field name="state" string="Estado"/>
					<field name="submission_date" string="Presentación"/>
					<field name="settlement_date" string="Acreditación"/>
				</tree>
		    </field>
		</record>


	    <record id="gic_payment_action" model="ir.actions.act_window">
	        <field name="name">Listado de Cobros</field>
	        <field name="res_model">gic.payment</field>
	        <field name="view_mode">tree,form,kanban</field>
	    </record>
	</data>
</odoo>